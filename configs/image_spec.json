{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ImageMetadata",
  "description": "Complete metadata specification for a processed image",
  "type": "object",
  "required": ["image_id", "file", "embedding", "caption", "tags"],
  
  "properties": {
    "image_id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for this image"
    },
    
    "file": {
      "type": "object",
      "required": ["hash", "path", "width", "height"],
      "properties": {
        "hash": {
          "type": "string",
          "description": "SHA256 hash of file contents"
        },
        "path": {
          "type": "string",
          "description": "Relative path to image file"
        },
        "width": {"type": "integer"},
        "height": {"type": "integer"},
        "format": {
          "type": "string",
          "enum": ["jpg", "jpeg", "png", "webp"]
        },
        "size_bytes": {"type": "integer"}
      }
    },
    
    "source": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["places365", "textvqa", "user_upload", "custom"]
        },
        "category": {
          "type": "string",
          "description": "Original dataset category if applicable"
        },
        "url": {
          "type": "string",
          "format": "uri"
        }
      }
    },
    
    "embedding": {
      "type": "object",
      "required": ["model", "qdrant_point_id"],
      "properties": {
        "model": {
          "type": "string",
          "description": "Model used for embedding (e.g., siglip-so400m)"
        },
        "qdrant_point_id": {
          "type": "string",
          "format": "uuid",
          "description": "Reference to vector in Qdrant"
        },
        "dimension": {
          "type": "integer",
          "description": "Embedding vector dimension"
        }
      }
    },
    
    "caption": {
      "type": "object",
      "required": ["text", "model"],
      "properties": {
        "text": {
          "type": "string",
          "description": "Full caption text"
        },
        "short": {
          "type": "string",
          "maxLength": 200,
          "description": "Truncated caption for UI"
        },
        "model": {
          "type": "string",
          "description": "Model used for captioning"
        },
        "confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "structured": {
          "type": "object",
          "description": "Structured extraction from caption",
          "properties": {
            "scene_type": {"type": "string"},
            "people_count": {"type": "integer"},
            "actions": {
              "type": "array",
              "items": {"type": "string"}
            },
            "extracted_nouns": {
              "type": "array",
              "items": {"type": "string"}
            },
            "detected_languages": {
              "type": "array",
              "items": {"type": "string"}
            }
          }
        }
      }
    },
    
    "tags": {
      "type": "array",
      "description": "Taxonomy-mapped tags with confidence scores",
      "items": {
        "type": "object",
        "required": ["tag_id", "display", "confidence"],
        "properties": {
          "tag_id": {
            "type": "string",
            "description": "Canonical tag ID (e.g., scene.restaurant.ramen_shop)"
          },
          "display": {
            "type": "string",
            "description": "Human-readable tag name"
          },
          "category": {
            "type": "string",
            "enum": ["scene", "mood", "lighting", "weather", "objects", "interaction", "people_count"]
          },
          "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          },
          "source": {
            "type": "string",
            "enum": ["clip_verify", "caption_map", "classifier"],
            "description": "How this tag was determined"
          },
          "evidence": {
            "type": "object",
            "description": "Supporting evidence for debugging",
            "properties": {
              "caption_phrase": {"type": "string"},
              "clip_margin": {"type": "number"},
              "prompt_used": {"type": "string"}
            }
          }
        }
      }
    },
    
    "objects": {
      "type": "array",
      "description": "Detected objects with bounding boxes and optional masks",
      "items": {
        "type": "object",
        "required": ["object_id", "label", "confidence", "box"],
        "properties": {
          "object_id": {
            "type": "string",
            "format": "uuid"
          },
          "label": {
            "type": "string",
            "description": "Object label from detector"
          },
          "label_canonical": {
            "type": "string",
            "description": "Mapped to taxonomy (e.g., objects.cup)"
          },
          "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          },
          "box": {
            "type": "object",
            "description": "Bounding box in normalized coordinates (0-1)",
            "required": ["x1", "y1", "x2", "y2"],
            "properties": {
              "x1": {"type": "number"},
              "y1": {"type": "number"},
              "x2": {"type": "number"},
              "y2": {"type": "number"}
            }
          },
          "box_pixels": {
            "type": "object",
            "description": "Bounding box in pixel coordinates",
            "properties": {
              "x1": {"type": "integer"},
              "y1": {"type": "integer"},
              "x2": {"type": "integer"},
              "y2": {"type": "integer"}
            }
          },
          "mask": {
            "type": "object",
            "description": "SAM2 mask data",
            "properties": {
              "rle": {
                "type": "string",
                "description": "Run-length encoded mask"
              },
              "area": {
                "type": "integer",
                "description": "Mask area in pixels"
              },
              "centroid": {
                "type": "object",
                "properties": {
                  "x": {"type": "number"},
                  "y": {"type": "number"}
                }
              }
            }
          },
          "z_order": {
            "type": "integer",
            "description": "Click selection priority (smaller area = higher)"
          }
        }
      }
    },
    
    "text_regions": {
      "type": "array",
      "description": "OCR detected text regions",
      "items": {
        "type": "object",
        "required": ["text", "box"],
        "properties": {
          "text": {"type": "string"},
          "language": {"type": "string"},
          "confidence": {"type": "number"},
          "box": {
            "type": "object",
            "properties": {
              "x1": {"type": "number"},
              "y1": {"type": "number"},
              "x2": {"type": "number"},
              "y2": {"type": "number"}
            }
          }
        }
      }
    },
    
    "processing": {
      "type": "object",
      "description": "Processing metadata",
      "properties": {
        "version": {"type": "string"},
        "processed_at": {"type": "string", "format": "date-time"},
        "stages_completed": {
          "type": "object",
          "properties": {
            "embed": {"type": "boolean"},
            "caption": {"type": "boolean"},
            "tag": {"type": "boolean"},
            "detect": {"type": "boolean"},
            "mask": {"type": "boolean"}
          }
        },
        "processing_time_ms": {"type": "integer"}
      }
    }
  }
}
