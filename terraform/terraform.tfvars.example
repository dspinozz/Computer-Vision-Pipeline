# Example Terraform variables file
# Copy this to terraform.tfvars and customize

aws_region         = "us-east-1"
environment        = "dev"
project_name       = "cv-pipeline"
vpc_cidr           = "10.0.0.0/16"
image_tag          = "latest"
api_cpu            = 1024
api_memory         = 2048
api_desired_count  = 2

# Database
db_name            = "cvpipeline_images"
db_username        = "cvpipeline"
db_password        = "CHANGE_ME_SECURE_PASSWORD"  # REQUIRED: Change this!

# RDS
rds_instance_class    = "db.t3.medium"
rds_allocated_storage = 20

# Qdrant
qdrant_collection = "image_embeddings"

# HTTPS (optional)
domain_name     = ""  # e.g., "api.example.com"
certificate_arn = ""  # Optional: provide existing ACM certificate ARN
